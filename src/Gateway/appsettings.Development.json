{
    "Serilog":  {
                    "MinimumLevel":  {
                                         "Default":  "Information",
                                         "Override":  {
                                                          "Microsoft.AspNetCore":  "Warning",
                                                          "Microsoft.EntityFrameworkCore":  "Warning"
                                                      }
                                     },
                    "WriteTo":  [
                                    {
                                        "Name":  "Console"
                                    },
                                    {
                                        "Args":  {
                                                     "serverUrl":  "http://localhost:5341"
                                                 },
                                        "Name":  "Seq"
                                    }
                                ]
                },
    "ConnectionStrings":  {
                              "PostgreSQL":  "Host=localhost;Port=5432;Database=booktable;Username=booktable_admin;Password=LocalDev123!",
                              "Elasticsearch":  "http://localhost:9200",
                              "RabbitMQ":  "amqp://guest:guest@localhost:5672",
                              "Redis":  "localhost:6379"
                          },
    "ReverseProxy":  {
                         "Clusters":  {
                                          "inventory":  {
                                                            "Destinations":  {
                                                                                 "default":  {
                                                                                                 "Address":  "http://localhost:5002"
                                                                                             }
                                                                             }
                                                        },
                                          "search":  {
                                                         "Destinations":  {
                                                                              "default":  {
                                                                                              "Address":  "http://localhost:5001"
                                                                                          }
                                                                          }
                                                     },
                                          "reservations":  {
                                                               "Destinations":  {
                                                                                    "default":  {
                                                                                                    "Address":  "http://localhost:5003"
                                                                                                }
                                                                                }
                                                           },
                                          "payments":  {
                                                           "Destinations":  {
                                                                                "default":  {
                                                                                                "Address":  "http://localhost:5004"
                                                                                            }
                                                                            }
                                                       }
                                      },
                         "Routes":  {
                                        "inventory":  {
                                                          "Match":  {
                                                                        "Path":  "/api/inventory/{**catch-all}"
                                                                    },
                                                          "ClusterId":  "inventory"
                                                      },
                                        "search":  {
                                                       "Match":  {
                                                                     "Path":  "/api/search/{**catch-all}"
                                                                 },
                                                       "ClusterId":  "search"
                                                   },
                                        "reservations":  {
                                                             "Match":  {
                                                                           "Path":  "/api/reservations/{**catch-all}"
                                                                       },
                                                             "ClusterId":  "reservations"
                                                         },
                                        "payments":  {
                                                         "Match":  {
                                                                       "Path":  "/api/payments/{**catch-all}"
                                                                   },
                                                         "ClusterId":  "payments"
                                                     }
                                    }
                     }
}
